@model List<Talep>
@{
    ViewData["Title"] = "Home Page";
}

<div class="m-4">
    <div class="bg-success text-white p-3 mb-2">
        Talep Listesi
    </div>


    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit">
            Talep Ekle
        </a>
    </div>

    <table class="table table-sm table-responsive table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tip</th>
                <th>Tanım</th>
                <th>Yer</th>
                <th><b>Talep</b></th>
                <th>Tarih</th>
                <th>Departman</th>
                <th><b>Onay</b></th>
                <th>Tarih</th>
                <th><b>Yapan</b></th>
                <th>Tarih</th>
                <th>Departman</th>
                <th><b>Kontrol</b></th>
                <th>Tarih</th>
                <th>Departman</th>
                @*<th>#</th>
                <th>#</th>*@
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="btn btn-primary" asp-action="Detail" asp-route-id="@item.Id">
                                @item.Id
                            </a>
                        </td>
                        <td>@item.Tip</td>
                        <td>@item.UrunTanimi</td>
                        <td>@item.TalepEdilenYer</td>
                        <td>@item.TalepEdenAdSoyad</td>
                        <td>@item.TalepEdenTarihi</td>
                        <td>@item.TalepEdenDepartman</td>
                        <td>@item.TalepOnayAdSoyad</td>
                        <td>@item.TalepOnayTarihi</td>
                        <td>@item.TalepYapanAdSoyad</td>
                        <td>@item.TalepYapanTalepTarihi</td>
                        <td>@item.TalepYapanDepartman</td>
                        <td>@item.TalepKontrolAdSoyad</td>
                        <td>@item.TalepKontrolTarihi</td>
                        <td>@item.TalepKontrolDepartman</td>
                        @*<td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                                Düzenle
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">
                                Sil
                            </a>
                        </td>*@

                    </tr>

                }
            }
            else
            {
                <tr>
                    <td colspan="18">Talep Yok</td>
                </tr>
            }
        </tbody>
    </table>
</div>

